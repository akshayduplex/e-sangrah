<%- include('../../partials/header') %>
    <div class="page-wrapper">
        <div class="content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Designation Management</h1>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDesignationModal">
                    <i class="fas fa-plus"></i> Add Designation
                </button>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Add Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% designations.forEach(designation=> { %>
                                    <tr>
                                        <td>
                                            <%= designation.name %>
                                        </td>
                                        <td>
                                            <%= designation.description %>
                                        </td>
                                        <td>
                                            <span
                                                class="badge <%= designation.status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
                                                <%= designation.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <%= new Date(designation.add_date).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <a href="/designations/assign-menu/<%= designation._id %>"
                                                class="btn btn-sm btn-info">
                                                <i class="fas fa-list"></i> Assign Menu
                                            </a>
                                            <button class="btn btn-sm btn-warning" onclick="editDesignation('<%= designation._id %>', '<%= designation.name %>', 
                                    '<%= designation.description %>', '<%= designation.status %>')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger"
                                                onclick="deleteDesignation('<%= designation._id %>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Add Designation Modal -->
            <div class="modal fade" id="addDesignationModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add New Designation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form id="addDesignationForm">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" name="description" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Add Designation</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Edit Designation Modal -->
            <div class="modal fade" id="editDesignationModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Edit Designation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form id="editDesignationForm">
                            <input type="hidden" name="id" id="editDesignationId">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" id="editDesignationName"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea class="form-control" name="description" id="editDesignationDescription"
                                        rows="3"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="status" id="editDesignationStatus" required>
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Update Designation</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/footer') %>
        <script>
            // Add Designation Form Submission
            document.getElementById('addDesignationForm').addEventListener('submit', async function (e) {
                e.preventDefault();
                const formData = Object.fromEntries(new FormData(this));
                try {
                    const response = await fetch(`${BASE_URL}/api/designations/add`, {
                        method: 'POST',
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (result.success) {
                        showAlert('Designation added successfully');
                        $('#addDesignationModal').modal('hide');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert(result.message, 'danger');
                    }
                } catch (error) {
                    showAlert('Error adding designation', 'danger');
                }
            });

            // Edit Designation Function
            function editDesignation(id, name, description, status) {
                document.getElementById('editDesignationId').value = id;
                document.getElementById('editDesignationName').value = name;
                document.getElementById('editDesignationDescription').value = description;
                document.getElementById('editDesignationStatus').value = status;

                $('#editDesignationModal').modal('show');
            }

            // Edit Designation Form Submission
            document.getElementById('editDesignationForm').addEventListener('submit', async function (e) {
                e.preventDefault();
                const formData = Object.fromEntries(new FormData(this));
                const designationId = document.getElementById('editDesignationId').value;

                try {
                    const response = await fetch(`${BASE_URL}/api/designations/update/${designationId}`, {
                        method: 'PUT',
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (result.success) {
                        showAlert('Designation updated successfully');
                        $('#editDesignationModal').modal('hide');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert(result.message, 'danger');
                    }
                } catch (error) {
                    showAlert('Error updating designation', 'danger');
                }
            });

            // Delete Designation Function
            async function deleteDesignation(id) {
                if (!confirmDelete()) return;

                try {
                    const response = await fetch(`${BASE_URL}/api/designations/delete/${id}`, {
                        method: 'DELETE'
                    });

                    const result = await response.json();

                    if (result.success) {
                        showAlert('Designation deleted successfully');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showAlert(result.message, 'danger');
                    }
                } catch (error) {
                    showAlert('Error deleting designation', 'danger');
                }
            }
        </script>