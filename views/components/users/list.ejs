<%- include('../../partials/header') %>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">User Management</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
        <i class="fas fa-plus"></i> Add User
    </button>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Designation</th>
                        <th>Status</th>
                        <th>IP Whitelist</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user._id %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td><span class="badge bg-info">
                                    <%= user.role_type %>
                                </span></td>
                            <td>
                                <%= user.designation_id.name %>
                            </td>
                            <td>
                                <span class="badge <%= user.status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
                                    <%= user.status %>
                                </span>
                            </td>
                            <td>
                                <%= user.whitelist_ip || 'None' %>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning edit-user-btn" data-id="<%= user._id %>"
                                    data-name="<%= user.name %>" data-email="<%= user.email %>"
                                    data-role="<%= user.role_type %>" data-designation="<%= user.designation_id._id %>"
                                    data-status="<%= user.status %>" data-ip="<%= user.whitelist_ip || '' %>">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteUser('<%= user._id %>')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addUserForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="raw_password" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role Type</label>
                        <select class="form-select" name="role_type" required>
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                            <option value="clerk">Clerk</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Designation</label>
                        <select class="form-select" name="designation_id" required>
                            <% designations.forEach(designation=> { %>
                                <option value="<%= designation._id %>">
                                    <%= designation.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">IP Whitelist (optional)</label>
                        <input type="text" class="form-control" name="whitelist_ip">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editUserForm">
                <input type="hidden" name="id" id="editUserId">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="editUserName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="editUserEmail" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role Type</label>
                        <select class="form-select" name="role_type" id="editUserRole" required>
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                            <option value="clerk">Clerk</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Designation</label>
                        <select class="form-select" name="designation_id" id="editUserDesignation" required>
                            <% designations.forEach(designation=> { %>
                                <option value="<%= designation._id %>">
                                    <%= designation.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="status" id="editUserStatus" required>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">IP Whitelist (optional)</label>
                        <input type="text" class="form-control" name="whitelist_ip" id="editUserIp">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update User</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>
<script>
    // Add User Form Submission
    document.getElementById('addUserForm').addEventListener('submit', async function (e) {
        e.preventDefault();
        const formData = new FormData(this);

        try {
            const response = await fetch(`${BASE_URL}/api/permissions/users/add`, {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                showAlert('User added successfully');
                $('#addUserModal').modal('hide');
                setTimeout(() => location.reload(), 1000);
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            showAlert('Error adding user', 'danger');
        }
    });

    // Edit User Event Delegation
    document.addEventListener('click', function (e) {
        if (e.target.closest('.edit-user-btn')) {
            const button = e.target.closest('.edit-user-btn');
            const id = button.dataset.id;
            const name = button.dataset.name;
            const email = button.dataset.email;
            const role = button.dataset.role;
            const designation = button.dataset.designation;
            const status = button.dataset.status;
            const ip = button.dataset.ip;

            editUser(id, name, email, role, designation, status, ip);
        }
    });

    // Edit User Function
    function editUser(id, name, email, role, designation, status, ip) {
        document.getElementById('editUserId').value = id;
        document.getElementById('editUserName').value = name;
        document.getElementById('editUserEmail').value = email;
        document.getElementById('editUserRole').value = role;
        document.getElementById('editUserDesignation').value = designation;
        document.getElementById('editUserStatus').value = status;
        document.getElementById('editUserIp').value = ip;

        $('#editUserModal').modal('show');
    }

    // Edit User Form Submission
    document.getElementById('editUserForm').addEventListener('submit', async function (e) {
        e.preventDefault();
        const formData = new FormData(this);
        const userId = document.getElementById('editUserId').value;

        try {
            const response = await fetch(`${BASE_URL}/api/permissions/users/update/${userId}`, {
                method: 'PUT',
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                showAlert('User updated successfully');
                $('#editUserModal').modal('hide');
                setTimeout(() => location.reload(), 1000);
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            showAlert('Error updating user', 'danger');
        }
    });

    // Delete User Function
    async function deleteUser(id) {
        if (!confirmDelete()) return;

        try {
            const response = await fetch(`${BASE_URL}/api/permissions/users/delete/${id}`, {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                showAlert('User deleted successfully');
                setTimeout(() => location.reload(), 1000);
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            showAlert('Error deleting user', 'danger');
        }
    }
</script>