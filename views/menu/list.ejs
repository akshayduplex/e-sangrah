<%- include('../partials/header') %>

    <!-- Page Wrapper -->
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">Menu List</h4>
                            <a href="/menu/add" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Add Menu
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="menuTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Type</th>
                                            <th>Name</th>
                                            <th>Priority</th>
                                            <th>Is Show</th>
                                            <th>Add Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% menus.forEach((menu, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= menu.type %>
                                                </td>
                                                <td>
                                                    <%= menu.name %>
                                                </td>
                                                <td>
                                                    <%= menu.priority %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= menu.is_show ? 'success' : 'danger' %>">
                                                        <%= menu.is_show ? 'Yes' : 'No' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <%= new Date(menu.add_date).toLocaleDateString('en-IN') %>
                                                </td>
                                                <td>
                                                    <a href="/menu/edit/<%= menu._id %>" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-danger"
                                                        onclick="confirmDelete('<%= menu._id %>')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
        <script>
            // Delete confirmation
            function confirmDelete(menuId) {
                if (confirm('Are you sure you want to delete this menu?')) {
                    fetch(`/api/menu/${menuId}`, {
                        method: 'DELETE',
                        headers: { 'Content-Type': 'application/json' }
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                alert('Menu deleted successfully');
                                location.reload();
                            } else {
                                alert('Error deleting menu: ' + data.message);
                            }
                        })
                        .catch(err => {
                            console.error('Error:', err);
                            alert('Error deleting menu');
                        });
                }
            }

            // Init DataTable
            $(document).ready(function () {
                $('#menuTable').DataTable({
                    pageLength: 10,
                    lengthMenu: [10, 25, 50, 100],
                    ordering: true,
                    columnDefs: [
                        { orderable: false, targets: -1 } // disable sort on "Action"
                    ]
                });
            });
        </script>