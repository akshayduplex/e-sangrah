<!-- ======================  APPROVER MODAL ====================== -->
<div class="modal fade" id="addMemberModal" tabindex="-1" aria-labelledby="addMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title font" id="addMemberModalLabel" style="color: white;">Approver Members</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <!-- Loading / Status placeholder -->
                <div id="approverStatus" class="text-center text-muted mb-3"></div>

                <!-- ==== APPROVER LIST TABLE ==== -->
                <div class="table-responsive">
                    <table class="table table-bordered align-middle" id="approverTable">
                        <thead class="table-primary">
                            <tr>
                                <th>S.No.</th>
                                <th>Approver Member</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Remark</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Approver rows will be dynamically populated here by JS -->
                            <tr>
                                <td colspan="6" class="text-center text-muted">No data available.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>