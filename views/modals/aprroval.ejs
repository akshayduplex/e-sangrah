<!-- Action Approval Request Modal -->
<div id="approvalModal"
    class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-auto overflow-hidden">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <h2 class="text-xl font-bold text-white">Action Approval Request</h2>
        </div>

        <!-- Modal Content -->
        <div class="p-6">
            <!-- Request Info -->
            <div class="mb-6">
                <div class="flex items-start space-x-3 mb-4">
                    <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <span class="text-blue-600 font-semibold text-sm">AA</span>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-800 font-medium">
                            <span id="requesterName">A. Arun</span> has requested for the document approvals
                        </p>
                        <div class="mt-2 p-3 bg-gray-50 rounded-lg border border-gray-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="font-semibold text-gray-800" id="documentName">Project Proposal v1</p>
                                    <p class="text-sm text-gray-500" id="documentSize">250KB</p>
                                </div>
                                <button id="viewFileBtn" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    View File
                                </button>
                            </div>
                        </div>
                        <p class="text-sm text-gray-500 mt-2">
                            Approval Request on <span id="requestDate">July 17th, 2025</span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Divider -->
            <div class="border-t border-gray-200 my-4"></div>

            <!-- Description Section -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Description</h3>
                <p class="text-gray-600 bg-gray-50 p-3 rounded-lg border border-gray-200" id="documentDescription">
                    This document is about the project proposal which need to sent to the client
                </p>
            </div>

            <!-- Approval Options -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Approval Decision</h3>
                <div class="space-y-3">
                    <label
                        class="flex items-center space-x-3 p-3 border border-gray-200 rounded-lg hover:bg-blue-50 cursor-pointer">
                        <input type="radio" name="approvalAction" value="approve"
                            class="h-4 w-4 text-blue-600 focus:ring-blue-500">
                        <span class="text-gray-700 font-medium">Approve</span>
                    </label>
                    <label
                        class="flex items-center space-x-3 p-3 border border-gray-200 rounded-lg hover:bg-red-50 cursor-pointer">
                        <input type="radio" name="approvalAction" value="decline"
                            class="h-4 w-4 text-red-600 focus:ring-red-500">
                        <span class="text-gray-700 font-medium">Decline</span>
                    </label>
                </div>
            </div>

            <!-- Compliance Section -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-3">Compliance Information</h3>
                <div class="space-y-2">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Compliance and Retention File</span>
                        <span class="font-semibold text-green-600" id="complianceStatus">Yes</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Expiry Date</span>
                        <span class="font-semibold text-gray-800" id="expiryDate">21st August 2025</span>
                    </div>
                </div>
            </div>

            <!-- Comment Section -->
            <div class="mb-6">
                <label for="approvalComment" class="block text-sm font-medium text-gray-700 mb-2">
                    Leave a comment (optional)
                </label>
                <textarea id="approvalComment" rows="3"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                    placeholder="Add your comments or feedback..."></textarea>
                <p class="text-sm text-gray-500 mt-1">
                    <span id="notifyUsers">Arun and other approver members</span> will be notified
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <button type="button" id="cancelBtn"
                    class="px-6 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    Cancel
                </button>
                <button type="button" id="submitApprovalBtn" disabled
                    class="px-6 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:bg-blue-300 disabled:cursor-not-allowed transition-colors">
                    Approve
                </button>
            </div>
        </div>
    </div>
</div>