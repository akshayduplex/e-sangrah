<%- include('../../partials/header') %>

    <div class="page-wrapper">
        <div class="content">

            <!-- Breadcrumb -->
            <div class="dflexbtwn page-breadcrumb mb-3">
                <div class="my-auto mb-2">
                    <h2 class="mb-1">
                        <%= title %>
                    </h2>
                    <nav>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a href="#"><i class="ti ti-smart-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active">Department List</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="/departments" class="btn btn-primary">
                        <i class="ti ti-plus me-1"></i> Add Department
                    </a>
                </div>
            </div>
            <!-- Department Table -->
            <div class="card" id="userListCard">
                <div class="card-body p-0" id="userListBody">
                    <div class="custom-datatable-filter table-responsive" id="userTableWrapper">
                        <table class="table datatable" id="departmentTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Name</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Added By</th>
                                    <th>Created At</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="departmentTableBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="footer mt-4 d-sm-flex align-items-center justify-content-between border-top bg-white p-3">
                <p class="mb-0">2025 &copy; HLFPPT.</p>
                <p>Designed & Developed by
                    <a href="javascript:void(0);" id="devLink" class="text-primary">Duplex Services & Technology</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <%- include('../../modals/deleteModal') %>
        <%- include('../../partials/footer') %>

            <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
            <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

            <script>
                $(document).ready(function () {
                    let deleteDeptId = null;
                    let table;

                    // Fetch departments via API
                    $.ajax({
                        url: '/api/departments',
                        method: 'GET',
                        success: function (res) {
                            if (!res.success) return alert('Failed to fetch departments');

                            let tbody = '';
                            res.data.forEach((dept, index) => {
                                let addedBy = dept.addedBy?.name || '-';
                                let createdAt = new Date(dept.add_date).toLocaleString();
                                tbody += `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${dept.name}</td>
                        <td>${dept.priority}</td>
                        <td>${dept.status}</td>
                        <td>${addedBy}</td>
                        <td>${createdAt}</td>
                        <td>
                            <a href="/departments/edit/${dept._id}" class="text-primary me-2" title="Edit">
                                <i class="ti ti-edit"></i>
                            </a>
                            <a href="#" class="text-danger btn-delete" data-id="${dept._id}" title="Delete">
                                <i class="ti ti-trash"></i>
                            </a>
                        </td>
                    </tr>
                `;
                            });

                            $('#departmentTableBody').html(tbody);

                            // Initialize DataTable
                            table = $('#departmentTable').DataTable({
                                "columnDefs": [
                                    { "orderable": false, "targets": [0, 6] },
                                    { "orderable": true, "targets": [1, 2, 3, 4, 5] }
                                ],
                                "order": []
                            });
                        },
                        error: function (err) { console.error(err); }
                    });

                    // Open delete confirmation modal
                    $(document).on('click', '.btn-delete', function (e) {
                        e.preventDefault();
                        deleteDeptId = $(this).data('id');
                        $('#confirmDeleteModal').modal('show');
                    });

                    // Handle delete confirmation
                    $('#confirmDeleteBtn').click(function () {
                        if (!deleteDeptId) return;

                        $.ajax({
                            url: `/api/departments/${deleteDeptId}`,
                            method: 'DELETE',
                            success: function (res) {
                                $('#confirmDeleteModal').modal('hide');

                                if (res.success) {
                                    showToast(res.message || 'Department deleted successfully!', 'success');

                                    // Remove the row from DataTable
                                    const row = $(`.btn-delete[data-id="${deleteDeptId}"]`).closest('tr');
                                    table.row(row).remove().draw(false); // redraw table without page reload

                                    deleteDeptId = null;
                                } else {
                                    showToast(res.message || 'Failed to delete department', 'danger');
                                }
                            },
                            error: function (err) {
                                $('#confirmDeleteModal').modal('hide');

                                let msg = err.responseJSON?.message || 'Something went wrong';
                                showToast(msg, 'warning');
                            }
                        });
                    });
                });


            </script>