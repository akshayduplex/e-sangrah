        <!-- DataTables Scripts -->
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

        <!-- Archived Folders Logic -->
        <script>
            $(document).ready(function () {
                const fileIcons = {
                    ppt: "/img/icons/fn1.png",
                    pptx: "/img/icons/fn1.png",
                    doc: "/img/icons/fn2.png",
                    docx: "/img/icons/fn2.png",
                    xls: "/img/icons/fn3.png",
                    xlsx: "/img/icons/fn3.png",
                    pdf: "/img/icons/fn4.png",
                    default: "/img/icons/fn1.png"
                };

                const $table = $('#archived_documents_table');

                const dataTable = $table.DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: `${baseUrl}/api/documents/archive`,
                        type: "GET",
                        data: function (d) {
                            d.page = (d.start / d.length) + 1;
                            d.limit = d.length;
                        },
                        dataSrc: function (res) {
                            if (!res.success) return [];
                            return res.data.map(doc => {
                                const filesInfo = doc.files?.[0]
                                    ? (() => {
                                        const file = doc.files[0];
                                        const ext = file.originalName.split('.').pop().toLowerCase();
                                        const fileSizeKB = (file.fileSize / 1024).toFixed(2) + ' KB';
                                        return `
                                    <div class="d-flex align-items-center">
                                        <span class="avatar rounded bg-light me-2">
                                            <img src="${fileIcons[ext] || fileIcons.default}" style="height:30px;">
                                        </span>
                                        <div>
                                            <p class="mb-0 text-dark">${file.originalName}</p>
                                            <small class="text-muted">${fileSizeKB}</small>
                                        </div>
                                    </div>
                                `;
                                    })()
                                    : '-';

                                return {
                                    actions: `
                                <div class="action-icon d-inline-flex">
                                    <a href="#" class="restore-folder me-2" data-folder-id="${doc._id}" data-bs-toggle="modal" data-bs-target="#restore-modal">
                                        <i class="ti ti-restore"></i>
                                    </a>
                                    <a href="#" class="trash-folder" data-folder-id="${doc._id}" data-bs-toggle="modal" data-bs-target="#trashdocfile-modal">
                                        <i class="ti ti-trash"></i>
                                    </a>
                                </div>`,
                                    fileName: filesInfo,
                                    createdAt: new Date(doc.createdAt).toLocaleDateString(),
                                    department: doc.department?.name || "-",
                                    deletedOn: new Date(doc.updatedAt || doc.createdAt).toLocaleDateString(),
                                    tags: doc.tags.join(", "),
                                    metaData: `
                                <strong>Description:</strong> ${doc.metadata.fileDescription}<br>
                                <strong>Heading:</strong> ${doc.metadata.mainHeading}
                            `,
                                };
                            });
                        }
                    },
                    columns: [
                        { data: 'actions', orderable: false, searchable: false },
                        { data: 'fileName' },
                        { data: 'createdAt' },
                        { data: 'department' },
                        { data: 'deletedOn' },
                        { data: 'tags' },
                        { data: 'metaData' }
                    ],
                    columnDefs: [
                        {
                            targets: 6, // files column
                            render: function (data) {
                                return data; // DataTables will render HTML
                            }
                        }
                    ],
                    order: [[1, 'desc']],
                    paging: true,
                    searching: true,
                    ordering: true,
                    info: true,
                    autoWidth: false
                });

                // Filter by Department
                $(document).on('click', '#departmentFilter a', function () {
                    const dept = $(this).data('dept');
                    if (dept === 'all') {
                        dataTable.column(3).search('').draw(); // department column index
                    } else {
                        dataTable.column(3).search(dept).draw();
                    }
                });

                // Trash Folder
                $(document).on('click', '.trash-folder', function (e) {
                    e.preventDefault();
                    const folderId = $(this).data('folder-id');
                    $('#confirm-trash-folder').off('click').on('click', function () {
                        $.ajax({
                            url: `${baseUrl}/api/folders/${folderId}`,
                            type: 'DELETE',
                            success: function (res) {
                                if (res.success) {
                                    dataTable.ajax.reload();
                                }
                            }
                        });
                    });
                });

                // Restore File
                // Restore File / Folder using existing #restore-modal
                $(document).on('click', '.restore-folder', function (e) {
                    e.preventDefault();

                    const folderId = $(this).data('folder-id');
                    const $row = $(this).closest('tr');

                    // Get the full HTML of the filesInfo column
                    const filesInfoHTML = $row.find('td:eq(1)').html() || '-';

                    // Inject full filesInfo into modal body
                    $('#restore-modal .modal-body').html(filesInfoHTML);

                    // Handle restore action
                    $('#restore-modal .btn-primary').off('click').on('click', function () {
                        $.ajax({
                            url: `${baseUrl}/api/folders/${folderId}/restore`,
                            type: 'PATCH',
                            success: function (res) {
                                if (res.success) {
                                    $('#restore-modal').modal('hide'); // Close modal
                                    $('#archived_documents_table').DataTable().ajax.reload(); // Refresh table
                                } else {
                                    showToast('Failed to restore file.', 'success');
                                }
                            },
                            error: function () {
                                showToast('Something went wrong!', 'error');
                            }
                        });
                    });
                });
            });
        </script>