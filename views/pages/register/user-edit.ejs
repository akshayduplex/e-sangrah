<%- include('../../partials/header') %>

    <div class="page-wrapper">
        <div class="content">
            <!-- Breadcrumb -->
            <div class="d-md-flex d-block align-items-center justify-content-between page-breadcrumb mb-3">
                <div class="my-auto mb-2">
                    <h2 class="mb-1">Edit User</h2>
                    <nav>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#"><i class="ti ti-smart-home"></i></a></li>
                            <li class="breadcrumb-item active">Edit User</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="add-info-fieldset">
                <form id="editForm" novalidate>
                    <input type="hidden" id="userId" value="<%= user._id %>">

                    <div class="row">
                        <!-- Full Name -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name <span
                                        class="text-danger">*</span></label>
                                <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>"
                                    required>
                            </div>
                        </div>

                        <!-- Email (read-only) -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" id="email" class="form-control" value="<%= user.email %>" readonly>
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone_number" class="form-label">Phone Number <span
                                        class="text-danger">*</span></label>
                                <input type="tel" id="phone_number" name="phone_number" class="form-control"
                                    value="<%= user.phone_number || '' %>" pattern="^[0-9]{10}$" maxlength="10"
                                    oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0,10)" required>
                            </div>
                        </div>

                        <!-- Employee ID -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="employee_id" class="form-label">Employee ID <span
                                        class="text-danger">*</span></label>
                                <input type="text" id="employee_id" name="employee_id" class="form-control"
                                    value="<%= user.userDetails?.employee_id || '' %>" required
                                    oninput="this.value = this.value.toUpperCase()">
                            </div>
                        </div>

                        <!-- Department -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="department" class="form-label">Department</label>
                                <select id="department" name="department" class="form-select select2" required>
                                    <option value="">-- Select Department --</option>
                                    <% departments.forEach(dep=> { %>
                                        <option value="<%= dep._id %>" <%=user.userDetails?.department?._id==dep._id
                                            ? "selected" : "" %>>
                                            <%= dep.name %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>

                        <!-- Designation -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="designation_id" class="form-label">Designation</label>
                                <select id="designation_id" name="designation_id" class="form-select select2" required>
                                    <option value="">-- Select Designation --</option>
                                    <% designations.forEach(des=> { %>
                                        <option value="<%= des._id %>" <%=user.userDetails?.designation?._id==des._id
                                            ? "selected" : "" %>>
                                            <%= des.name %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select id="status" name="status" class="form-select">
                                    <option value="Active" <%=user.status==="Active" ? "selected" : "" %>>Active
                                    </option>
                                    <option value="Inactive" <%=user.status==="Inactive" ? "selected" : "" %>>Inactive
                                    </option>
                                    <option value="Blocked" <%=user.status==="Blocked" ? "selected" : "" %>>Blocked
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary btn-w-lg rounded-pill">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
        <script>
            $(document).ready(function () {
                $('#editForm').on('submit', function (e) {
                    e.preventDefault();

                    let userId = $('#userId').val();
                    let payload = {
                        name: $('#name').val(),
                        phone_number: $('#phone_number').val(),
                        employee_id: $('#employee_id').val(),
                        department: $('#department').val(),
                        designation_id: $('#designation_id').val(),
                        status: $('#status').val()
                    };

                    $.ajax({
                        url: `/api/user/${userId}`,
                        method: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify(payload),
                        success: function (res) {
                            if (res.success) {
                                showToast('User updated successfully!', 'success');
                                setTimeout(() => {
                                    window.location.href = '/users/list';
                                }, 1500); // delay redirect so user sees toast
                            } else {
                                showToast(res.message || 'Update failed', 'error');
                            }
                        },
                        error: function (err) {
                            console.error(err);
                            showToast('Error updating user', 'error');
                        }
                    });
                });
            });
        </script>