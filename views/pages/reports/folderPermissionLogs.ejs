        <%- include('../../modals/grandFolderAccess') %>
            <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
            <script>
                $(document).ready(function () {
                    let selectedLogId = null;

                    const table = $('#folderPermissionLogsTable').DataTable({
                        processing: true,
                        serverSide: true,
                        searching: true,

                        ajax: function (data, callback) {
                            const page = Math.ceil(data.start / data.length) + 1;
                            const limit = data.length;

                            const orderColIndex = data.order[0].column;
                            const sortDir = data.order[0].dir === "asc" ? 1 : -1;

                            const columnsMap = ["createdAt", "user", "folder", "requestedAt", "requestStatus"];
                            const sortField = columnsMap[orderColIndex];

                            const search = data.search.value || "";

                            $.ajax({
                                url: `/api/folders/permissions?page=${page}&limit=${limit}`,
                                type: 'GET',
                                success: function (res) {
                                    callback({
                                        draw: data.draw,
                                        recordsTotal: res.pagination.total,
                                        recordsFiltered: res.pagination.total,
                                        data: res.data.map(log => [
                                            `<div class="btn-group" role="group">
                                <button type="button" class="btn border-0" data-bs-toggle="dropdown">
                                    <i class="ti ti-settings"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item share-btn"
                                           href="#"
                                           data-id="${log._id}"
                                           data-email="${log.user?.email ?? ''}"
                                           data-folder-id="${log.folder?._id ?? ''}"
                                           data-bs-toggle="modal"
                                           data-bs-target="#grantFolderAccessModal">
                                           Grant Access
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item reject-btn"
                                           href="#"
                                           data-id="${log._id}">
                                           Reject
                                        </a>
                                    </li>
                                </ul>
                            </div>`,
                                            log.user?.username ?? 'N/A',
                                            log.folder?.name ?? 'N/A',
                                            new Date(log.requestedAt).toLocaleDateString(),
                                            log.requestStatus === 'approved'
                                                ? '<span class="badge bg-soft-success">Approved</span>'
                                                : log.requestStatus === 'rejected'
                                                    ? '<span class="badge bg-soft-danger">Rejected</span>'
                                                    : '<span class="badge bg-soft-warning">Pending</span>'
                                        ])
                                    });
                                },
                                error: () => showToast("Failed loading permission logs", "danger")
                            });
                        },

                        columns: [
                            { title: "", orderable: false },
                            { title: "User" },
                            { title: "Folder" },
                            { title: "Date" },
                            { title: "Status" }
                        ]
                    });


                    /* ============================
                       Load User Access in Modal
                       ============================ */
                    $(document).on("click", ".share-btn", async function () {
                        const email = $(this).data("email");
                        const logId = $(this).data("id");
                        const folder = $(this).data("folder-id");

                        $("#userEmail").val(email).prop("readonly", true);
                        $("#grantBtn").data("log-id", logId);

                        try {
                            const res = await fetch(`/api/folders/${folder}/access?email=${email}`);
                            const data = await res.json();

                            if (data.success && data.userAccess) {
                                $("#access").val(data.userAccess.access);
                                $("#duration").val(data.userAccess.duration);
                            } else {
                                $("#access").val("read");
                                $("#duration").val("");
                            }
                        } catch {
                            showToast("Failed loading user access", "warning");
                        }
                    });


                    /* ============================
                       Grant Access (PATCH)
                       ============================ */
                    $("#grantBtn").on("click", async function () {
                        const logId = $(this).data("log-id");

                        const payload = {
                            requestStatus: "approved",
                            access: $("#access").val(),
                            duration: $("#duration").val()
                        };

                        try {
                            const res = await fetch(`/api/folders/permissions/${logId}`, {
                                method: "PATCH",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify(payload)
                            });
                            const data = await res.json();

                            bootstrap.Modal.getInstance(document.getElementById("grantFolderAccessModal")).hide();
                            table.ajax.reload();

                            showToast(data.message || "Access Granted", "success");
                        } catch {
                            showToast("Approval Failed", "danger");
                        }
                    });


                    /* ==================================
                       Reject Access Request (PATCH)
                       ================================== */
                    $(document).on("click", ".reject-btn", async function (e) {
                        e.preventDefault();
                        const logId = $(this).data("id");

                        try {
                            const res = await fetch(`/api/folders/permissions/${logId}`, {
                                method: "PATCH",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ requestStatus: "rejected" })
                            });
                            const data = await res.json();

                            table.ajax.reload();
                            showToast(data.message || "Rejected Successfully", "warning");
                        } catch {
                            showToast("Failed to reject request", "danger");
                        }
                    });

                });
            </script>