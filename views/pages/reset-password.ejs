<%- include('../partials/header') %>

    <!-- Page Wrapper -->
    <div class="page-wrapper">
        <div class="content">
            <!-- <div class="container mt-5"> -->
            <!-- <div class="row justify-content-center"> -->
            <div class="col-sm-7">
                <div class="loginforms">

                    <!-- Forgot Password Section -->
                    <section class="forgot-section mb-4">
                        <h2 class="mb-2">Reset Password?</h2>
                        <p class="subtext mb-4">Relax! You can recover your password here.</p>

                        <form id="forgotPasswordForm">
                            <div class="mb-3">
                                <label for="emailInput" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="emailInput" name="email"
                                    placeholder="name@example.com" required aria-describedby="emailHelp"
                                    value="<%= email || '' %>">

                                <div id="emailHelp" class="form-text">
                                    We'll send you an OTP to reset your password.
                                </div>
                            </div>

                            <div class="d-flex align-items-center gap-3 mb-3">
                                <button type="submit" class="btn btn-primary submit-btn">Send OTP</button>
                                <span>Didn't receive it?
                                    <button type="button" class="btn btn-link resend-btn">Resend</button>
                                </span>
                            </div>
                        </form>
                    </section>

                    <!-- OTP Section -->
                    <section class="otp-section" style="display:none;">
                        <h5 class="mb-3">Enter OTP</h5>

                        <div class="otp-input-wrapper mb-3">
                            <div class="d-flex gap-2">
                                <input type="text" maxlength="1" class="form-control otp-input"
                                    aria-label="OTP Digit 1">
                                <input type="text" maxlength="1" class="form-control otp-input"
                                    aria-label="OTP Digit 2">
                                <input type="text" maxlength="1" class="form-control otp-input"
                                    aria-label="OTP Digit 3">
                                <input type="text" maxlength="1" class="form-control otp-input"
                                    aria-label="OTP Digit 4">
                            </div>
                            <p id="otp-timer" class="text-danger fw-bold mt-2"></p>
                            <p class="text-success fw-bold mt-2" style="display:none;">âœ” OTP Verified</p>
                        </div>

                        <form id="resetPasswordForm" style="display:none;">
                            <!-- New Password -->
                            <input type="hidden" name="email" id="hiddenEmail">
                            <div class="mb-3 password-box">
                                <label for="newPassword" class="form-label">New Password</label>
                                <div class="input-group">
                                    <input type="password" id="newPassword" name="newPassword" class="form-control"
                                        required>
                                    <!-- <button type="button" class="btn btn-outline-secondary password-toggle"
                                        onclick="togglePassword('newPassword', this)">
                                        <i class="fa fa-eye"></i>
                                    </button> -->
                                </div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="mb-3 password-box">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <div class="input-group">
                                    <input type="password" id="confirmPassword" name="confirmPassword"
                                        class="form-control" required>
                                    <!-- <button type="button" class="btn btn-outline-secondary password-toggle"
                                        onclick="togglePassword('confirmPassword', this)">
                                        <i class="fa fa-eye"></i>
                                    </button> -->
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mb-2">Submit New Password</button>
                        </form>
                    </section>

                </div>
                <!-- </div>
                </div> -->
            </div>
        </div>
    </div>

    <script src="/js/pages/forgot-password.js"></script>
    <%- include('../partials/footer') %>

