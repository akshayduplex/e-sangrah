    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('#projectSelect').select2({
                placeholder: 'Search projects...',
                allowClear: true,
                width: 'resolve',
                ajax: {
                    url: '/api/projects',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return { search: params.term || '' };
                    },
                    processResults: function (response) {
                        return {
                            results: response.data.map(project => ({
                                id: project._id,
                                text: project.projectName
                            }))
                        };
                    },
                    cache: true
                },
                minimumInputLength: 0 // <-- allow showing options without typing
            });

            // Load first 10 projects initially
            $.get('/api/projects', function (response) {
                const initialOptions = response.data.slice(0, 10).map(p =>
                    new Option(p.projectName, p._id, false, false)
                );
                $('#projectSelect').append(initialOptions).trigger('change');
            });
        });

    </script>

